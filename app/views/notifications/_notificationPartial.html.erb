<%add_breadcrumb "Home"%>
<%add_breadcrumb "Notifications"%>
<hr>
<div class="callout callout-success fade in">
	<h5>Notifications</h5>
	<p>Sent notifications</p>
</div>
<div class="breadcrumb-line">
  <ul class="breadcrumb">
     <%= render_breadcrumbs :tag => :li, :separator => "" %>
  </ul>
  <div class="visible-xs breadcrumb-toggle">
    <a class="btn btn-link btn-lg btn-icon" data-toggle="collapse" data-target=".breadcrumb-buttons"><i class="icon-menu2"></i></a>
  </div>
  <ul class="breadcrumb-buttons collapse"></ul>
</div>
<div class="">
<%=	link_to "Send new notification", {controller: 'notifications', action: 'new'}, remote: true,
	 :class => "btn btn-lg btn-info btn-fill", :style=>"width:50%"%>
</div>
<hr>
<% if @notifications.any? %>
<%= render @notifications %>
<% else %>
	<p>No notifications yet.</p>
<% end %>
